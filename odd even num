<body>

<p>Click the button to loop through a block of code five times.</p>

<button onclick="myFunction()">Try it</button>

<p id="demo"></p>

<script>
function myFunction() {
  var text = "";
  var i;
  for (i = 0; i < 5; i++) {
  if(i%2==0)
  {
    text +=  i +" numberis even "  + "<br>";
  }
 else if(i%3==0)
  {
        text +=  i +" numberis odd "  + "<br>";
  }

}
  document.getElementById("demo").innerHTML = text;
}
</script>

